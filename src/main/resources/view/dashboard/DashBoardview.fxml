<AnchorPane fx:id="ancPage1" prefHeight="934.0" prefWidth="1360.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.farm.controller.DashBoardController">
    <children>
        <!-- Left Navigation Panel - Updated with better styling -->
        <VBox prefWidth="200.0" spacing="20.0" style="-fx-background-color: #dfe4ea;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0">
            <padding>
                <Insets bottom="20.0" left="10.0" right="10.0" top="20.0" />
            </padding>
            <children>
                <Label fx:id="lbTime" style="-fx-text-fill: white; -fx-font-size: 14px;" />
                <ImageView fitHeight="150.0" fitWidth="180.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../../photos/logo%20of%20A%20&amp;%20S%20FoodFarm.png" />
                    </image>
                </ImageView>
                <VBox alignment="TOP_CENTER" prefHeight="517.0" prefWidth="180.0" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#btnDashBoardOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="DashBoard" />
                        <Button mnemonicParsing="false" onAction="#btnCustomerViewOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Customer" />
                        <Button mnemonicParsing="false" onAction="#btnOrderViewOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Order" />
                        <Button mnemonicParsing="false" onAction="#btnItemViewOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Items" />
                        <Button mnemonicParsing="false" onAction="#btnPlantOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Plant" />
                        <Button alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnEmployeeOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Employee" />
                        <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#btnSupplierOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Supplier" />
                  <Button mnemonicParsing="false" onAction="#btnOrderDetailsOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Order Details" />
                        <Button alignment="CENTER" contentDisplay="RIGHT" mnemonicParsing="false" onAction="#btnLogOutOnAction" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Logout" />
                    </children>
                </VBox>
            </children>
        </VBox>

        <!-- Main Content Area -->
        <AnchorPane fx:id="ancMainContainer" layoutX="213.0" layoutY="108.0" prefHeight="832.0" prefWidth="1144.0" style="-fx-background-color: #f5f6fa;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="213.0" AnchorPane.rightAnchor="3.0" AnchorPane.topAnchor="108.0">
            <children>
                <VBox spacing="20" style="-fx-padding: 20; -fx-background-color: #ffffff;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                    <children>
                        <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Real-Time Water Quality Monitoring" />

                        <HBox alignment="CENTER" spacing="30.0">
                            <!-- Current Readings Panel - Updated with better styling -->
                            <VBox style="-fx-background-color: white; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);">
                                <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Current Readings" />

                                <GridPane hgap="15" style="-fx-padding: 10 0 0 0;" vgap="15">
                                    <Label style="-fx-font-weight: bold;" text="Temperature:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                                    <Label fx:id="tempValue" style="-fx-text-fill: #3498db;" text="--°C" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                                    <Label style="-fx-font-weight: bold;" text="pH Level:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                                    <Label fx:id="phValue" style="-fx-text-fill: #3498db;" text="--" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                                    <Label style="-fx-font-weight: bold;" text="Turbidity:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                                    <Label fx:id="turbidityValue" style="-fx-text-fill: #3498db;" text="-- NTU" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                                    <Label style="-fx-font-weight: bold;" text="Dissolved Oxygen:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                                    <Label fx:id="oxygenValue" style="-fx-text-fill: #3498db;" text="-- mg/L" GridPane.columnIndex="1" GridPane.rowIndex="3" />

                                    <Label style="-fx-font-weight: bold;" text="Last Update:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
                                    <Label fx:id="timestampValue" style="-fx-text-fill: #7f8c8d;" text="--:--:--" GridPane.columnIndex="1" GridPane.rowIndex="4" />
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" />
                                        <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                        <RowConstraints minHeight="30.0" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                </GridPane>

                                <HBox alignment="CENTER" spacing="15" style="-fx-padding: 20 0 0 0;">
                                    <Button fx:id="startButton" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #2ecc71; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Start Monitoring" />
                                    <Button fx:id="stopButton" prefHeight="40.0" prefWidth="180.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-font-size: 14px; -fx-background-radius: 5;" text="Stop Monitoring" />
                                </HBox>
                            </VBox>

                            <!-- Charts -->
                            <VBox spacing="20">
                                <LineChart fx:id="tempChart" animated="false" createSymbols="false" legendVisible="false" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" title="Temperature (°C)">
                                    <xAxis>
                                        <NumberAxis label="Time" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="0" upperBound="40" />
                                    </yAxis>
                                </LineChart>

                                <LineChart fx:id="phChart" animated="false" createSymbols="false" legendVisible="false" style="-fx-background-color: white; -fx-border-radius: 10; -fx-background-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 10, 0, 0, 0);" title="pH Level">
                                    <xAxis>
                                        <NumberAxis label="Time" />
                                    </xAxis>
                                    <yAxis>
                                        <NumberAxis lowerBound="0" upperBound="14" />
                                    </yAxis>
                                </LineChart>
                            </VBox>
                        </HBox>

                        <!-- Status Indicators - Updated with better styling -->
                        <HBox alignment="CENTER" spacing="30" style="-fx-padding: 20 0 0 0;">
                            <VBox alignment="CENTER" spacing="10">
                                <Circle fx:id="tempStatus" fill="GREY" radius="20" stroke="#2c3e50" strokeWidth="2" />
                                <Label style="-fx-font-weight: bold;" text="Temperature" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="10">
                                <Circle fx:id="phStatus" fill="GREY" radius="20" stroke="#2c3e50" strokeWidth="2" />
                                <Label style="-fx-font-weight: bold;" text="pH Level" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="10">
                                <Circle fx:id="turbidityStatus" fill="GREY" radius="20" stroke="#2c3e50" strokeWidth="2" />
                                <Label style="-fx-font-weight: bold;" text="Turbidity" />
                            </VBox>
                            <VBox alignment="CENTER" spacing="10">
                                <Circle fx:id="oxygenStatus" fill="GREY" radius="20" stroke="#2c3e50" strokeWidth="2" />
                                <Label style="-fx-font-weight: bold;" text="Oxygen" />
                            </VBox>
                        </HBox>
                    </children>
                </VBox>
            </children>
        </AnchorPane>

        <Label fx:id="lbDateTime" layoutX="260.0" layoutY="35.0" prefHeight="33.0" prefWidth="257.0" style="-fx-font-size: 14px; -fx-text-fill: #2c3e50;" />
    </children>
</AnchorPane>
