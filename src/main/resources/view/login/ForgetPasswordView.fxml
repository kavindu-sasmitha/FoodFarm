<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="ancePane" prefHeight="832.0" prefWidth="1114.0" style="-fx-background-color: linear-gradient(to bottom, #74b9ff, #0984e3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.farm.controller.FrogetPasswordController">

   <children>
      <VBox alignment="CENTER" layoutX="197.0" layoutY="49.0" prefHeight="734.0" prefWidth="721.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-border-radius: 12px; -fx-padding: 25px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">

         <children>
            <Label fx:id="lbTitle" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Forgot Password" />

            <Label fx:id="lbEmail" style="-fx-font-size: 14px; -fx-text-fill: #636e72;" text="Enter Your Email" />
            <TextField fx:id="txtEmail" promptText="Enter your email" style="-fx-background-color: #dfe6e9; -fx-border-radius: 8px; -fx-padding: 10px;" />
            <Button fx:id="btnSendCode" onAction="#btnSendCodeOnAction" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 8px; -fx-padding: 10px;" text="Send Code" />

            <Label fx:id="lbCode" style="-fx-font-size: 14px; -fx-text-fill: #636e72;" text="Enter Code" />
            <TextField fx:id="txtVerificationCode" promptText="Verification Code" style="-fx-background-color: #dfe6e9; -fx-border-radius: 8px; -fx-padding: 10px;" />
            <Button fx:id="btnVerifyCode" onAction="#btnVerifyCodeOnAction" style="-fx-background-color: #0984e3; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 8px; -fx-padding: 10px;" text="Verify Code" />

            <Label fx:id="lbNewPassword" style="-fx-font-size: 14px; -fx-text-fill: #636e72;" text="New Password" />
            <PasswordField fx:id="txtNewPassword" promptText="********" style="-fx-background-color: #dfe6e9; -fx-border-radius: 8px; -fx-padding: 10px;" />

            <Label fx:id="lbConfirmPassword" style="-fx-font-size: 14px; -fx-text-fill: #636e72;" text="Confirm Password" />
            <PasswordField fx:id="txtConfirmPassword" promptText="********" style="-fx-background-color: #dfe6e9; -fx-border-radius: 8px; -fx-padding: 10px;" />

            <Button fx:id="btnConfirm" onAction="#btnResetPasswordOnAction" style="-fx-background-color: #0984e3; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 8px; -fx-padding: 12px;" text="Reset Password" />
            <Button mnemonicParsing="false" onAction="#btnBackOnAction" style="-fx-background-color: #130f40;" text="Back" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</AnchorPane>
