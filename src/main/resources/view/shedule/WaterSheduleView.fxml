<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="500.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.farm.controller.WaterScheduleController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="480.0" prefWidth="680.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 10px;">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Watering Schedule">
                     <HBox.margin>
                        <Insets left="300.0" />
                     </HBox.margin>
                  </Label>
               </children>
            </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Schedule ID:" />
                        <TextField fx:id="txtScheduleID" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Watering Days:" />
                        <TextField fx:id="txtWateringDays" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Plant Type:" />
                        <TextField fx:id="txtPlantType" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Growth Stages:" />
                        <TextField fx:id="txtGrowthStages" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Note:" />
                        <TextArea fx:id="txtNote" prefHeight="80.0" prefWidth="400.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button fx:id="btnSaveSchedule" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 5px;" text="Save" />
                        <Button fx:id="btnResetSchedule" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5px;" text="Reset" />
                        <Button fx:id="btnDeleteSchedule" mnemonicParsing="false" prefWidth="120.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-border-radius: 5px;" text="Delete" />
                  <Button mnemonicParsing="false" style="-fx-background-color: #3498db;" text="Update" />
                    </children>
                </HBox>

                <TableView fx:id="tblWaterSchedule" prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="colScheduleID" prefWidth="120.0" text="Schedule ID" />
                        <TableColumn fx:id="colWateringDays" prefWidth="160.0" text="Watering Days" />
                        <TableColumn fx:id="colPlantType" prefWidth="180.0" text="Plant Type" />
                        <TableColumn fx:id="colGrowthStages" prefWidth="140.0" text="Growth Stages" />
                        <TableColumn fx:id="colNote" prefWidth="160.0" text="Note" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
