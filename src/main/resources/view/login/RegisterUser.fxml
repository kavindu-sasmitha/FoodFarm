<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="832.0" prefWidth="887.0" style="-fx-background-color: linear-gradient(to bottom, #74b9ff, #0984e3);" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.farm.controller.RegisterUserController">
   <children>
      <VBox alignment="CENTER" layoutX="194.0" layoutY="150.0" prefHeight="500.0" prefWidth="500.0" spacing="20.0" style="-fx-background-color: #ffffff; -fx-border-radius: 15px; -fx-padding: 30px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 5);">
         <children>
            <Label fx:id="lbTital" style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2d3436;" text="Register New User" />

            <Label fx:id="lbName" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;" text="Enter Your Name :" />
            <TextField fx:id="txtName" prefWidth="300.0" promptText="Admin" style="-fx-background-color: #dfe6e9; -fx-border-color: #b2bec3; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <Label fx:id="lbPassword1" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;" text="Enter Your Email Address :" />
            <TextField fx:id="txtEmail" prefWidth="300.0" promptText="Admin@gmail.com" style="-fx-background-color: #dfe6e9; -fx-border-color: #b2bec3; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <Label fx:id="lbPassword" style="-fx-font-size: 14px; -fx-text-fill: #2d3436;" text="Enter Your Password :" />
            <PasswordField fx:id="txtPassword" prefWidth="300.0" promptText="Admin@1234" style="-fx-background-color: #dfe6e9; -fx-border-color: #b2bec3; -fx-border-radius: 8px; -fx-padding: 8px;" />

            <Button fx:id="button" onAction="#btnRegisterUserOnAction" style="-fx-background-color: #00b894; -fx-text-fill: white; -fx-font-size: 16px; -fx-border-radius: 8px; -fx-padding: 10px;" text="Register" />
            <Button fx:id="btnBack" onAction="#btnBackOnAction" style="-fx-background-color: #d63031; -fx-text-fill: white; -fx-font-size: 14px; -fx-border-radius: 8px; -fx-padding: 10px;" text="Back" />
         </children>
      </VBox>
   </children>
</AnchorPane>
