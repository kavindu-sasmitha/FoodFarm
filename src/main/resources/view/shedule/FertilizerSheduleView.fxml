<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="edu.lk.ijse.farm.controller.FertilizerScheduleController">
    <children>
        <VBox layoutX="10.0" layoutY="10.0" prefHeight="580.0" prefWidth="780.0" style="-fx-background-color: #ecf0f1; -fx-border-color: #bdc3c7; -fx-border-width: 2px; -fx-border-radius: 10px; -fx-padding: 20px;">
            <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                      <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-padding: 10px;" text="Add Fertilizer Schedule" />
               </children>
               <padding>
                  <Insets left="300.0" />
               </padding>
            </HBox>

                <HBox spacing="115.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Schedule ID:" />
                        <TextField fx:id="txtScheduleID" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                      <HBox spacing="104.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Fertilizer Days:" />
                        <TextField fx:id="txtFertilizerDays" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="28.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Fertilizer Quantity Per Plant:" />
                        <TextField fx:id="txtFertilizerPerPlant" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="100.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Growth Stages:" />
                        <TextField fx:id="txtGrowthStages" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                            <HBox spacing="126.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Plant Type:" />
                        <TextField fx:id="txtPlantType" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                      <HBox spacing="100.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Fertilizer Name:" />
                        <TextField fx:id="txtFertilizerName" prefWidth="250.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                <HBox spacing="160.0">
                    <children>
                        <Label style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;" text="Note:" />
                        <TextArea fx:id="txtNote" prefHeight="80.0" prefWidth="400.0" style="-fx-background-color: #ffffff; -fx-border-color: #3498db; -fx-border-radius: 5px; -fx-padding: 5px;" />
                    </children>
                </HBox>

                <HBox alignment="CENTER" spacing="20.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#btnSaveSchedule" prefWidth="120.0" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-border-radius: 5px; -fx-font-weight: bold;" text="Save" />
                        <Button mnemonicParsing="false" onAction="#btnResetScheduleOnAction" prefWidth="120.0" style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-border-radius: 5px; -fx-font-weight: bold;" text="Reset" />
                        <Button mnemonicParsing="false" onAction="#btnDeleteScheduleOnAction" prefWidth="120.0" style="-fx-background-color: #c0392b; -fx-text-fill: white; -fx-border-radius: 5px; -fx-font-weight: bold;" text="Delete" />
                  <Button mnemonicParsing="false" onAction="#btnUpdateSceduleOnAction" style="-fx-background-color: #3498db;" text="Update" />
                    </children>
                </HBox>

                <TableView fx:id="tblFertilizerSchedule" prefHeight="200.0" prefWidth="600.0" style="-fx-background-color: #ffffff; -fx-border-color: #bdc3c7; -fx-border-radius: 5px;">
                    <columns>
                        <TableColumn fx:id="colPlantType" prefWidth="120.0" text="Plant Type" />
                        <TableColumn fx:id="colFertilizerName" prefWidth="160.0" text="Fertilizer Name" />
                        <TableColumn fx:id="colFertilizerQuantityPerPlant" prefWidth="180.0" text="Fertilizer Quantity Per Plant" />
                        <TableColumn fx:id="colGrowthStages" prefWidth="140.0" text="Growth Stages" />
                        <TableColumn fx:id="colNote" prefWidth="160.0" text="Note" />
                    </columns>
                </TableView>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </VBox>
    </children>
</AnchorPane>
